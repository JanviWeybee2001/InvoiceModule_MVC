@{
    ViewData["Title"] = "Edit Product";
}

@model ProductModel

<h2 class="h2 modal-title text-center mt-5">Edit Product</h2>
<br />

@if (ViewBag.IsSuccess == true)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        <strong>Congratulations</strong> You have updated new Product successfully. <br />
    </div>
}

<div class="container mt-5">
    <div class="addtxtDiv">
        <form method="post" asp-action="editProduct" asp-controller="Product">
            <div class="form-group">
                <label asp-for="productName"></label>
                <input asp-for="productName" />
                <br />
                <span asp-validation-for="productName" class="text-danger"></span>
            </div>
            <div class="form-group addButtonDiv">
                <input type="submit" value="Update" class="btn btn-success" />
                <a type="button" class="btn btn-light" asp-action="allProductItem" asp-controller="Product">Cancel</a>
            </div>
        </form>
    </div>
</div>
