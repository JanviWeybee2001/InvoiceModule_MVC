@model IEnumerable<ProductRateModel>
@{
    var i = 0;
}

@{
    ViewData["Title"] = "Product Rate ";
}

<h2 class="h2 modal-title text-center mt-5">Assign Party List</h2>
<br />

<a type="button" class="btn btn-warning float-right mt-1" asp-action="addProductRate" asp-controller="ProductRate">Add New ProductRate</a>
<br />

<table class="table mt-5">
    <thead>
        <tr>
            <th class="tableText">#</th>
            <th class="tableText">Product Name</th>
            <th class="tableText">Rate</th>
            <th class="tableText">Date of Rate</th>
            <th class="tableText">Actions</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            i++;
            <tr class=@(i%2 == 1 ? "table-active" : "")>
                <th scope="row" class="tableText">@item.id</th>
                <td class="table-active tableText">@item.Product.productName</td>
                <td class="table-active tableText">@item.Rate</td>
                <td class="table-active tableText">@item.DateOfRate.ToShortDateString()</td>
                <td>
                    <a asp-controller="ProductRate" asp-action="editProductRate" asp-route-id="@item.id" asp-route-productid="@item.ProductId" asp-route-rate="@item.Rate" asp-route-dateofrate="@item.DateOfRate" data-value="@item.id" class="btn btn-success mr-3">Edit</a>
                    <a asp-controller="ProductRate" asp-action="deleteProductRate" data-value="@item.id" asp-route-id="@item.id" class="btn btn-danger ml-3" onclick="return confirm('Do you want to Delete this rating Product ?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>